<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/home_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_bkg_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wayne.testbkgcolor.MainActivity">

    <Button
        android:id="@+id/change_bkg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_bkg_color" />

    <Button
        android:id="@+id/start_activity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_bkg_btn"
        android:layout_marginTop="20dp"
        android:text="@string/start_activity" />

    <Button
        android:id="@+id/change_dr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_activity_btn"
        android:layout_marginTop="20dp"
        android:text="@string/change_bkg_dr" />

    <Button
        android:id="@+id/start_test_activity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_dr_btn"
        android:layout_marginTop="20dp"
        android:text="@string/start_test_activity" />
</RelativeLayout>
